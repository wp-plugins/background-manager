<!-- Background Manager Start -->
{# ------ Background Link ------ #}
<a id="myatu_bgm_bg_link" class="myatu_bgm_fs" {% if random_image.bg_link %}href="{{ random_image.bg_link }}"{% else %}href="#" style="display:none"{% endif %}></a>

{# ------ Overlay ------ #}
{% if has_overlay %}<div id="myatu_bgm_overlay" class="myatu_bgm_fs"></div>{% endif %}

{# ------ Full-size Image ------ #}
{% if is_fullsize %}
<img id="myatu_bgm_top" class="myatu_bgm_fs" src="{{ random_image.url }}" alt="{{ random_image.alt }}" {% if opacity < 100 %}style="-moz-opacity:.{{ opacity }}; filter:alpha(opacity={{ opacity }}); opacity:.{{ opacity }};"{% endif %}  />
<script type="text/javascript">
//<![CDATA[
{# UNCOMPRESSED:
try {
    (function($){
        $('#myatu_bgm_top').hide().imgLoaded(function() {
            $(this).fadeIn('slow');
        });
    })(jQuery);
} catch(e) {};
#}
try{(function(a){a("#myatu_bgm_top").hide().imgLoaded(function(){a(this).fadeIn("slow")})})(jQuery)}catch(e){};
//]]>
</script>
{% endif %}

{# ------ Info Tab ------ #}
{% if has_info_tab %}
<div id="myatu_bgm_info">
    <div id="myatu_bgm_info_tab">{% if info_tab_link %}<a href="{{ random_image.link }}">{% endif %}[ + ]{% if info_tab_link %}</a>{% endif %}</div>

{% if info_tab_desc %}
    <div class="myatu_bgm_info_tab_content" style="display:none">
        {% if info_tab_thumb %}<img src="{{ random_image.thumb }}" alt="{{ random_image.alt }}" />{% endif %}

        <h3>{{ random_image.caption }}</h3>
        <div class="myatu_bgm_info_tab_desc">{{ random_image.desc | raw }}</div>
    </div>
{% endif %}
</div>
{% endif %}
<!-- Background Manager End -->
